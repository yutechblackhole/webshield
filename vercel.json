{
  "version": 2,
  "builds": [
    { "src": "api/*.py", "use": "@vercel/python" },
    { "src": "index.html", "use": "@vercel/static" },
    { "src": "static/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/scan", "dest": "/api/scan.py" },
    { "src": "/", "dest": "/index.html" },
    { "src": "^/(.*)$", "dest": "/index.html" }
  ],
  "functions": {
    "api/*.py": { "runtime": "python3.11" }
  }
}
